<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/tiktokBlurTarget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/tiktokMenuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/tiktokUserPicture"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/account_64" />

                    <TextView
                        android:id="@+id/tiktokUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:text="User"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/tiktokConnectionButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/broken_link_100"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="300dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topContainer">


                <TextView
                    android:id="@+id/tiktokTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TikTok Converter"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/tiktokInput"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:layout_height="40dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="18dp"
                    android:layout_marginTop="20dp"
                    android:hint="Enter TikTok URL..."
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@color/dark_gray" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="@drawable/input_underline" />

            </LinearLayout>

            <Button
                android:id="@+id/tiktokConvertBtn"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray_secondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:padding="14dp"
                android:text="Convert"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/tiktokDownloadBtn"
                android:textColor="@color/white"
                android:backgroundTint="@color/gray_secondary"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="false"
                android:padding="14dp"
                android:text="Download"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </eightbitlab.com.blurview.BlurTarget>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/tiktokBlur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/tiktokBlurMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/tiktokBlurBackButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:src="@drawable/back_arrow_50" />

            <ImageView
                android:id="@+id/tiktokBlurLogOutButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:src="@drawable/logout_50" />

            <ImageView
                android:id="@+id/tiktokBlurInfoButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:src="@drawable/info_50" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tiktokBlurConnection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <Spinner
                android:id="@+id/tiktokConnectionServerSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:spinnerMode="dialog" />

            <ImageView
                android:id="@+id/tiktokConnectionRetry"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/retry_50" />

            <ImageView
                android:id="@+id/tiktokConnectionBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_arrow_50" />

        </LinearLayout>
    </eightbitlab.com.blurview.BlurView>
</androidx.constraintlayout.widget.ConstraintLayout>