<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/tiktokTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TikTok Converter"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="300dp"/>

    <EditText
        android:id="@+id/tiktokInput"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiktokTitle"
        android:hint="Enter TikTok URL..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/tiktokConvertBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiktokInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp" />

    <Button
        android:id="@+id/tiktokDownloadBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Download"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tiktokInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp"
        android:visibility="invisible"
        android:clickable="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>