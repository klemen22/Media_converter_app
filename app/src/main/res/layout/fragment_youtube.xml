<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <TextView
        android:id="@+id/youtubeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Youtube Converter"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp" />

    <EditText
        android:id="@+id/youtubeInput"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/youtubeTitle"
        android:hint="Enter Youtube URL..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/youtubeSpinnerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/youtubeInput">

        <Spinner
            android:id="@+id/youtubeDropDownType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/youtubeDropDownResolution"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/youtubeConvertdBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/youtubeSpinnerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/youtubeDownloadBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Download"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/youtubeSpinnerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="14dp"
        android:visibility="invisible"
        android:clickable="false" />


</androidx.constraintlayout.widget.ConstraintLayout>